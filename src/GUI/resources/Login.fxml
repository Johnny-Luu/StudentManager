<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="766.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controllers.LoginController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="448.0" prefWidth="737.0" VBox.vgrow="ALWAYS">
      <children>
        <Label alignment="CENTER" layoutX="131.0" layoutY="84.0" prefHeight="66.0" prefWidth="122.0" style="&#10;" text="Login" textAlignment="CENTER" textFill="#9f9f9f" wrapText="false">
          <font>
            <Font name="Arial Black" size="36.0" />
          </font>
        </Label>
            <PasswordField fx:id="PasswordField" layoutX="52.0" layoutY="216.0" prefHeight="40.0" prefWidth="300.0" promptText="Password" style="-fx-background-color: #EEE0E0; -fx-background-radius: 45px;">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>
            <TextField fx:id="UserTextField" layoutX="52.0" layoutY="162.0" prefHeight="40.0" prefWidth="300.0" promptText="User Name" style="-fx-background-color: #EEE0E0; -fx-background-radius: 45px;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <Button fx:id="LoginButton" layoutX="253.0" layoutY="299.0" mnemonicParsing="false" onMouseClicked="#login" prefHeight="31.0" prefWidth="83.0" style="-fx-background-color: #5F3566; -fx-background-radius: 15px;" text="Log in" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
            <Hyperlink fx:id="ForgetPasswordLink" layoutX="268.0" layoutY="261.0" text="Forget password?" textFill="#595353">
               <font>
                  <Font name="System Italic" size="10.0" />
               </font>
            </Hyperlink>
            <ImageView fitHeight="360.0" fitWidth="352.0" layoutX="383.0" layoutY="99.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../asset/Picture/LoginPic.png" />
               </image>
            </ImageView>
            <Label fx:id="lblSuccessful" layoutX="57.0" layoutY="267.0" text="Successfully! Directing..." textFill="#00e22d" visible="false">
               <font>
                  <Font name="System Italic" size="11.0" />
               </font>
            </Label>
            <Label fx:id="lblFail" layoutX="52.0" layoutY="267.0" text="Wrong user name or password" textFill="#ff4b4b" visible="false">
               <font>
                  <Font name="System Italic" size="11.0" />
               </font>
            </Label>
            <Label fx:id="lblEmpty" layoutX="52.0" layoutY="267.0" text="Please full fill information" textFill="#ff4833" visible="false">
               <font>
                  <Font name="System Italic" size="11.0" />
               </font>
            </Label>

      </children>
    </AnchorPane>
  </children>
</VBox>
